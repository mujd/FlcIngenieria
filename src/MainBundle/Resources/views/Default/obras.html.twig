            <figure class="" itemprop="associatedMedia" itemscope itemtype="http://schema.org/ImageObject">
                <a href="{{asset('public/imagenes/obras/obra_1/obra1_3.jpg')}}" itemprop="contentUrl" data-size="1024x650">
                    <img class="img-orientation estiloImagen" src="{{asset('public/imagenes/obras/obra_1/obra1_3.jpg')}}" itemprop="thumbnail" alt="Image description" />
